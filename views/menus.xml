              name="Hotel Orders Management"
              parent="menu_hotel_root"
              action="action_hotel_orders_list_filtered"
              sequence="30"/>

    <!-- Menu Item for Room Description -->
    <menuitem id="menu_room_description"
              name="Room Descriptions"
              parent="menu_hotel_root"
