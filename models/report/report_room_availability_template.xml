<odoo>
    <template id="report_room_availability">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="wizard">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Room Availability Report</h2>
                        <p>Date Range:
                            <t t-esc="wizard.start_date"/>
                            to
                            <t t-esc="wizard.end_date"/>
                        </p>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Room Name</th>
                                    <th>Room Price</th>
                                    <th>Room Status</th>
                                    <th>Bed Type</th>
                                    <th>Hotel</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="data['rooms']" t-as="room">
                                    <tr>
                                        <td>
                                            <t t-esc="room.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="room.room_price"/>
                                        </td>
                                        <td>
                                            <t t-esc="room.room_status"/>
                                        </td>
                                        <td>
                                            <t t-esc="room.bed_type"/>
                                        </td>
                                        <td>
                                            <t t-esc="room.hotel_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <report
            id="action_room_availability_report"
            model="room.availability.wizard"
            string="Room Availability Report"
            report_type="qweb-pdf"
            name="hotel_management.report_room_availability"
            file="hotel_management.report_room_availability"
            print_report_name="'Room Availability Report - %s to %s' % (object.start_date, object.end_date)"
    />
</odoo>